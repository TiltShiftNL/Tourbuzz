<!doctype html>
<html lang="{{ lang }}">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="initial-scale=1">
        <meta name="mobile-web-app-capable" content="yes">

        <link rel="shortcut icon" type="image/x-icon" href="/img/favicon.ico">
        <link rel="apple-touch-icon" href="/img/buzz-icon.png">

        {% block meta %}
        <link rel="image_src" href="/img/tourbuzz_fb_preview.png">
        <link rel="canonical" href="{{ TOURBUZZ_URI_PROTOCOL }}{{ TOURBUZZ_URI }}">

        <title>Tour Buzz</title>
        <meta name="title" content="Tour Buzz">
        <meta name="description" content="Dagelijks het belangrijkste touringcarnieuws uit Amsterdam.">
        <meta name="keywords" content="amsterdam, touringcar, nieuws">

        <meta property="og:title" content="Tour Buzz">
        <meta property="og:url" content="{{ TOURBUZZ_URI_PROTOCOL }}{{ TOURBUZZ_URI }}">
        <meta property="og:description" content="Tour Buzz - Dagelijks het belangrijkste touringcarnieuws uit Amsterdam.">
        <meta property="og:site_name" content="Tour Buzz">
        <meta property="og:image" content="{{ TOURBUZZ_URI_PROTOCOL }}{{ TOURBUZZ_URI }}/img/tourbuzz_fb_preview.png">
        {% endblock %}

		<script type="text/javascript" src="//fast.fonts.net/jsapi/7cd4c080-5246-49b1-8f48-530e9d1829a6.js"></script>
		<link href="//fast.fonts.net/cssapi/7cd4c080-5246-49b1-8f48-530e9d1829a6.css" rel="stylesheet" >

        <!--<link href="/favicon.ico" rel="icon" type="image/x-icon">-->
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="//fast.fonts.net/cssapi/7cd4c080-5246-49b1-8f48-530e9d1829a6.css">
        <link rel="stylesheet" href="/css/scss/main.scss">
        <link rel="stylesheet" href="/js/owl-carousel/owl.carousel.css">
        <link rel="stylesheet" href="/js/owl-carousel/owl.theme.css">
        <link rel="stylesheet" href="/js/pikaday/css/pikaday.css">
        <link rel="stylesheet" href="/css/pikaday/buzz-theme.css">
        <script src="/js/jquery-2.2.4.min.js"></script>
        <script type="text/javascript" src='https://maps.google.com/maps/api/js?libraries=places&key={{ apikey }}'></script>
        <script src="/js/locationpicker/locationpicker.jquery.min.js"></script>
        <script src="/js/owl-carousel/owl.carousel.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.11.2/moment.min.js"></script>
        <script src="/js/pico-ui.js"></script>
        {% block scripts %}
            {# Page specific scripts go here. #}
        {% endblock %}

        {% if analytics %}
        <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

          ga('create', 'UA-74182539-1', 'auto');
          ga('send', 'pageview');
        </script>
        {% endif %}
    </head>
    <body>
        {% include 'partials/grid.twig' %}
        {% include 'partials/routes.twig' %}

        {% block header %}
           {% include 'dashboard/partials/header.twig' %}
        {% endblock %}

        {% block flashmessages %}
            {% if flash is not empty %}
                <section class="flashmessages">
                    {% for type, message in flash %}
                        <p class="{{ type }}">{{ message }}</p>
                    {% endfor %}
                </section>
            {% endif %}
        {% endblock %}

        {% block topselectie %}
           {% include 'dashboard/partials/nav.twig' %}
        {% endblock %}

        {% block slider %}{% endblock %}

        {% block main %}{% endblock %}

        {% block footer %}
            <footer>
                <p>{{ __('Meer info') }}: <a href="{{ TOURINGCAR_URI_PROTOCOL }}{{ TOURINGCAR_URI }}" target="_blank">{{ TOURINGCAR_URI }}</a></p>
                <p style="font-weight: normal">
                    {{ __('Feedback of vragen kunt u sturen naar') }}
                    <br>
                    {{ TOURINGCAR_CONTACT_NAME }}:
                    <a href="mailto:{{ TOURINGCAR_CONTACT_EMAIL }}">
                        {{ TOURINGCAR_CONTACT_NAME }}
                    </a>
                </p>
                <p style="font-weight: normal"><a href="/nieuwsbrief">{{ __('Meld u aan voor de nieuwsbrief') }}</a></p>

                {% if timestamp is not empty %}
                    <p>{{ __('Laatste wijziging') }}: {{ timestamp|date('d-m-Y') }}</p>
                {% endif %}

                <center style="margin-top: 10px"><div class="fb-like" data-share="false" data-width="240" data-show-faces="false"></div></center>

            </footer>
        {% endblock %}

        <script src="/js/pikaday/pikaday.js"></script>
        <script>

            var headerdate = new Pikaday({
                field: document.getElementById('headerdate'),
                format: '/YYYY/MM/DD',
                theme: 'buzz-theme',
                onSelect: function(date) {
                    //console.log(headerdate.toString());
                    window.location = headerdate.toString();
                }
            });

            var startdate = new Pikaday({
                field: document.getElementById('startdate'),
                format: 'YYYY-MM-DD',
                theme: 'buzz-theme'
            });
            var enddate = new Pikaday({
                field: document.getElementById('enddate'),
                format: 'YYYY-MM-DD',
                theme: 'buzz-theme'
            });
        </script>
        <script>
          window.fbAsyncInit = function() {
            FB.init({
              appId      : '1006352062780023',
              xfbml      : true,
              version    : 'v2.6'
            });
          };

          (function(d, s, id){
             var js, fjs = d.getElementsByTagName(s)[0];
             if (d.getElementById(id)) {return;}
             js = d.createElement(s); js.id = id;
             js.src = "//connect.facebook.net/en_US/sdk.js";
             fjs.parentNode.insertBefore(js, fjs);
           }(document, 'script', 'facebook-jssdk'));
        </script>
    </body>
</html>
