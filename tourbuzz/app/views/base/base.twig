    <body>
        <p>REDESIGN BRANCH</p>
        {% include 'partials/grid.twig' %}
        {% include 'partials/routes.twig' %}

        {% block header %}
            <header class="main-header">
                <div class="wrapper">
                    {#{% if adamlogo %}<img src="/img/adam-logo.png" class="adam-logo">{% endif %}#}
                    <a href="/" class="home"><img src="/img/buzzlogo-w.png" class="buzz-logo"></a>
                    <h2>
                        <a href="/"><img src="/img/tour-buzz.png" alt="Tour Buzz" class="title-logo"></a>
                    </h2>
                    <nav class="taalswitch group" pico-toggle-class="open">
                        <div class="dropdown group">
                            {% if lang == 'nl' %}
                                <a href="#" class="active"><img src="/img/taal/nl.png" class="vlag"><img src="/img/down-w.png" class="down-w"></a>
                                <a href="?lang=en"><img src="/img/taal/en.png" class="vlag"></a>
                                <a href="?lang=de"><img src="/img/taal/de.png" class="vlag"></a>
                                <a href="?lang=es"><img src="/img/taal/es.png" class="vlag"></a>
                            {% elseif lang == 'en' %}
                                <a href="#" class="active"><img src="/img/taal/en.png" class="vlag"><img src="/img/down-w.png" class="down-w"></a>
                                <a href="?lang=nl"><img src="/img/taal/nl.png" class="vlag"></a>
                                <a href="?lang=de"><img src="/img/taal/de.png" class="vlag"></a>
                                <a href="?lang=es"><img src="/img/taal/es.png" class="vlag"></a>
                            {% elseif lang == 'de' %}
                                <a href="#" class="active"><img src="/img/taal/de.png" class="vlag"><img src="/img/down-w.png" class="down-w"></a>
                                <a href="?lang=nl"><img src="/img/taal/nl.png" class="vlag"></a>
                                <a href="?lang=en"><img src="/img/taal/en.png" class="vlag"></a>
                                <a href="?lang=es"><img src="/img/taal/es.png" class="vlag"></a>
                            {% elseif lang == 'es' %}
                                <a href="#" class="active"><img src="/img/taal/es.png" class="vlag"><img src="/img/down-w.png" class="down-w"></a>
                                <a href="?lang=nl"><img src="/img/taal/nl.png" class="vlag"></a>
                                <a href="?lang=en"><img src="/img/taal/en.png" class="vlag"></a>
                                <a href="?lang=de"><img src="/img/taal/de.png" class="vlag"></a>
                            {% endif %}
                        </div>
                    </nav>

                </div>
            </header>
        {% endblock %}

        {% block flashmessages %}
            {% if flash is not empty %}
                <section class="flashmessages">
                    {% for type, message in flash %}
                        <p class="{{ type }}">{{ message }}</p>
                    {% endfor %}
                </section>
            {% endif %}
        {% endblock %}

        {% block topselectie %}
            <nav class="main-nav">
                <div class="wrapper">
                        <a href="/{{ Y }}/{{ m }}/{{ d }}" class="{% if activetab == 'berichten' %}active{% endif %}">{#<img src="/img/buzz-icon-g.png" class="buzz-icon">#}{{ __('Berichten') }}</a>
                        {#<a href="/haltes" class="{% if activetab == 'haltes' %}active{% endif %}">{{ __('Haltes') }}</a>
                        <a href="/parkeren" class="{% if activetab == 'parkeren' %}active{% endif %}">{{ __('Parkeren') }}</a>#}
                        <a href="/haltes-parkeerplaatsen" class="{% if activetab == 'haltes-parkeerplaatsen' %}active{% endif %}">{{ __('Haltes') }} & {{ __('Parkeren') }}</a>
                        {#<a href="/abonneren" class="{% if activetab == 'abonneren' %}active{% endif %}">{{ __('Abonneren') }}</a>#}
                </div>
            </nav>
        {% endblock %}

        {% block slider %}{% endblock %}

        {% block main %}{% endblock %}

        {% block footer %}
        <footer>
            <div class="wrapper">
                <div class="col-1-1">
                    <p>{{ __('Meer info') }}: <a href="{{ TOURINGCAR_URI_PROTOCOL }}{{ TOURINGCAR_URI }}" target="_blank">{{ TOURINGCAR_URI }}</a></p>
                    <p style="font-weight: normal">
                        {{ __('Feedback of vragen kunt u sturen naar') }}
                        <br>
                        {{ TOURINGCAR_CONTACT_NAME }}:
                        <a href="mailto:{{ TOURINGCAR_CONTACT_EMAIL }}">
                            {{ TOURINGCAR_CONTACT_NAME }}
                        </a>
                    </p>
                    <p style="font-weight: normal">
                        {% if lang == 'nl' %}
                        Meld u aan voor de <a href="/berichtenservice">berichtenservice</a> en <a href="/sms-aanmelden">SMS alerts</a>.
                        {% elseif lang == 'de' %}
                        Registrieren Sie sich für den <a href="/berichtenservice">Tour Buzz nachrichten</a> und <a href="/sms-aanmelden">SMS-alerts</a>.
                        {% elseif lang == 'en' %}
                        Subscribe to the <a href="/berichtenservice">message service</a> and <a href="/sms-aanmelden">SMS alerts</a>.
                        {% elseif lang == 'es' %}
                        ¿Quiere estar informado automáticamente <a href="/berichtenservice">mensajes</a> Tourbuzz.nl? Suscribirse a las alertas de servicio de mensajería y <a href="/sms-aanmelden">SMS</a>.
                        {% endif %}
                    </p>

                    {% if timestamp is not empty %}
                        <p>{{ __('Laatste wijziging') }}: {{ timestamp|date('d-m-Y') }}</p>
                    {% endif %}

                    <center style="margin-top: 10px"><div class="fb-like" data-share="false" data-width="240" data-show-faces="false"></div></center>
                </div>
            </div>
        </footer>
        {% endblock %}

        <script src="/js/pikaday/pikaday.js"></script>
        <script>

            var headerdate = new Pikaday({
                field: document.getElementById('headerdate'),
                format: '/YYYY/MM/DD',
                theme: 'buzz-theme',
                onSelect: function(date) {
                    //console.log(headerdate.toString());
                    window.location = headerdate.toString();
                }
            });

            var startdate = new Pikaday({
                field: document.getElementById('startdate'),
                format: 'YYYY-MM-DD',
                theme: 'buzz-theme'
            });
            var enddate = new Pikaday({
                field: document.getElementById('enddate'),
                format: 'YYYY-MM-DD',
                theme: 'buzz-theme'
            });
        </script>
