<rss version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/">
    <channel>
        <title>Tour Buzz</title>
        <link>{{ TOURBUZZ_URI_PROTOCOL }}{{ TOURBUZZ_URI }}</link>
        <description>Dagelijks het belangrijkste touringcarnieuws uit Amsterdam.</description>
        <language>nl-nl</language>
        <lastBuildDate>{{ datetime }}</lastBuildDate>
        {% for bericht in berichten %}
        <item>
            <title>{{ bericht.title }}</title>
            <link>{{ TOURBUZZ_URI_PROTOCOL }}{{ TOURBUZZ_URI }}/bericht/{{ bericht.id }}#{{ dateCode }}</link>
            <guid>{{ bericht.id }}{{ dateCode }}</guid>
            <pubDate>{{ pubDate }}</pubDate>
            <author>Tour Buzz</author>
            <description>{{ bericht.body }}</description>
            <content:encoded>
                <![CDATA[
                    <!doctype html>
                    <html lang="nl" prefix="op: http://media.facebook.com/op#">
                        <head>
                            <meta charset="utf-8">
                            <link rel="canonical" href="{{ TOURBUZZ_URI_PROTOCOL }}{{ TOURBUZZ_URI }}/bericht/{{ bericht.id }}#{{ dateCode }}">
                            <meta property="op:markup_version" content="v1.0">
                        </head>
                        <body>
                            <article>
                                <header>
                                    {% if bericht.image_url is not empty %}
                                    <figure>
                                        <img src="{{ bericht.image_url }}" />
                                        <figcaption>{{ bericht.title }}</figcaption>
                                    </figure>
                                    {% endif %}
                                    <h1>{{ bericht.title }}</h1>
                                </header>
                                {% if bericht.image_url is not empty %}
                                <figure>
                                    <img src="{{ bericht.image_url }}" class="no-margin"/>
                                    <figcaption class="op-left op-large">
                                        <h1>{{ bericht.title }}</h1>
                                    </figcaption>
                                </figure>
                                {% endif %}
                                <p>
                                    {{ bericht.body }}
                                </p>
                                <h2>Advies</h2>
                                <p>
                                    {{ bericht.advice }}
                                </p>
                                {% if bericht.link is not empty %}
                                    <h2>Meer informatie</h2>
                                    <p>
                                        <a href="{{ bericht.link }}">{{ bericht.link}}</a>
                                    </p>
                                {% endif %}
                                <p>Voor meer touringcarnieuws uit Amsterdam kijk je op <a href="{{ TOURBUZZ_URI_PROTOCOL }}{{ TOURBUZZ_URI }}">{{ TOURBUZZ_URI }}</a>.</p>
                                <footer>
                                    <p>Voor meer touringcarnieuws uit Amsterdam kijk je op <a href="{{ TOURBUZZ_URI_PROTOCOL }}{{ TOURBUZZ_URI }}">{{ TOURBUZZ_URI }}</a>.</p>
                                </footer>
                            </article>
                        </body>
                    </html>
                ]]>
            </content:encoded>
        </item>
        {% endfor %}
        </channel>
</rss>
