{% if routes %}
<div class="wrapper">
<style>
table { border: 1px solid #eee; border-collapse: collapse; }
td, th { text-align: left; vertical-align: top; padding: 2px 10px; border: 1px solid #eee;}
</style>
<table>
    <tr>
        <th>{{ __('routes.methods') }}</th>
        <th>{{ __('routes.pattern') }}</th>
        {#<th>Name</th>#}
    </tr>
{% for record in routes %}
<tr>
    <td>{{ record.methods|join(", ") }}</td>
    <td><a href="{{ record.pattern }}">{{ record.pattern }}</a></td>
    {#<td>{{ record.name }}</td>#}
</tr>
{% endfor %}
</table>
</div>
{% endif %}